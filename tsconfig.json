{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "baseUrl": ".",
    "outDir": "lib/",
    "rootDir": "src/",
    "allowJs": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "coverage",
    "**/*.spec.ts"
  ]
}
